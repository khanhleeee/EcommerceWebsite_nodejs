<div class="content-body">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
				<div class="card">
					<div class="card-header">
						<h4 class="card-title">Đánh giá sản phẩm - <strong>{{cmtParticular.productPoster.productName}}</strong></h4>
						<h3 class="card-title">Thời gian - <strong>{{cmtParticular.date}}</strong></h3>
					</div>
					<form method="POST" action="/adminFeedback/{{cmtParticular._id}}?_method=PUT">
						<div class="card-body">
							<div class="form-validation">
									<div class="col-xl-12">
							<div class="form-group row">
								<label class="col-lg-2 col-form-label" for="val-username">Tên khách hàng</label>

								<div class="col-lg-10">
									<input type="text" class="form-control" name="userName" value="{{cmtParticular.userPoster.userName}}" readonly>
								</div>
							</div>

							<div class="form-group row">
								<label class="col-lg-2 col-form-label" for="val-email">Nội dung</label>
								<div class="col-lg-10">
									<input type="text" class="form-control" name="product" value="{{cmtParticular.content}}" readonly>
								</div>
							</div>

							<div class="row justify-content-end">
								<div class="col-12 col-lg-4 col-xl-2">
									{{#ifCond cmtParticular.isHide false}}
									<a href="/adminFeedback/hideCmt/{{cmtParticular._id}}" class="btn btn-dark btn-sm btn-block">Ẩn</a>
									{{else}}
									<a href="/adminFeedback/showCmt/{{cmtParticular._id}}" class="btn btn-info btn-sm btn-block">Hiện</a>
									{{/ifCond}}
								</div>
							</div>
						</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

